<!DOCTYPE html>
{% set theme = saved_theme() %}
<html class="{{ theme }}" lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="color-scheme" content="light dark">
        <link href="{{ asset('favicon.ico') }}" rel="icon">
        <title>{% block deferred %}{{ title|default('base.title'|trans) }}{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-nightshade.min.css" rel="stylesheet">
        <script src="https://kit.fontawesome.com/f53343e7d9.js" crossorigin="anonymous"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% include 'base/home.html.twig' %}
        {% block body %}{% endblock %}
        {% include 'base/theme.html.twig' %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/js/darkmode.min.js"></script>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
