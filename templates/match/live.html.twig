{% extends 'base.html.twig' %}

{% block title %}
    {{ 'match_live.title'|trans }}
{% endblock %}

{% block body %}
    <div class="match-live">
        {% if not match %}
            <div class="alert alert-danger">
                {{ 'match_live.not_found'|trans({ '%profile%': path('player_profile', { 'playerId': player }) })|raw }}
            </div>
        {% endif %}

        {% if match %}
            {% include 'match/match.html.twig' with { 'currentPlayer': player } %}

            <div class="btn-wrapper">
                <a href="{{ path('match_details', { 'matchId': match.id }) }}" class="btn btn-primary">
                    {{ 'match_live.match_details'|trans }}
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
